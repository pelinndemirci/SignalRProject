@model UpdateBookingDto
@{
	ViewData["Title"] = "CreateBooking";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="BookingId" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad Giriniz</label>
								<input type="text" class="form-control" asp-for="Name" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Telefon Numarası Giriniz</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Mail Adresini Giriniz</label>
								<input type="text" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Kişi Sayısını Giriniz</label>
								<input type="text" class="form-control" asp-for="PersonCount" id="PersonCount">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Date">Rezervasyon Tarihini Giriniz</label>
								<input type="date" class="form-control" asp-for="Date" id="Date">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-success">Rezervasyonu Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

